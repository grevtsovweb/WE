section.lessons-section
    .lessons-section__container
        .lessons-section__grid
            .lessons-section__col-6-md
                .lessons-section__image
                    picture
                        source(srcset="img/lessons/lessons-physics-md.webp", media="(min-width: 992px)")
                        source(srcset="img/lessons/lessons-physics-sm.webp", media="(min-width: 767px)")
                        img(src="img/lessons/lessons-physics-m.webp", alt="Темы, которые мы изучаем на занятиях", width="280", height="270", loading="lazy")
            .lessons-section__col-6-md 
                .lessons-section__content 
                    h3.lessons-section__title Темы, которые мы изучаем на занятиях
                    ul.lessons-section__list
                        li.lessons-section__item
                            ul.lessons-section__list.lessons-section__list--inner
                                li.lessons-section__item Кинематика
                                li.lessons-section__item Динамика
                                li.lessons-section__item Статика
                                li.lessons-section__item Гидростатика
                                li.lessons-section__item Работа, мощность, энергия
                                li.lessons-section__item Импульс
                                li.lessons-section__item Молекулярная физика
                                li.lessons-section__item Атомная и ядерная физика
                        li.lessons-section__item
                            ul.lessons-section__list.lessons-section__list--inner
                                li.lessons-section__item Термодинамика
                                li.lessons-section__item Электростатика
                                li.lessons-section__item Электрический ток
                                li.lessons-section__item Магнетизм
                                li.lessons-section__item Колебания
                                li.lessons-section__item Оптика
                                li.lessons-section__item Основы СТО
                    .lessons-section__button 
                        +button("Стать нашим учеником", null, 'open', 'request')